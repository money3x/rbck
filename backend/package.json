{
  "name": "rabeab-kanchang-cms",
  "version": "1.0.0",
  "description": "Rice Harvester CMS and Website - Production Ready",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:all": "jest --coverage --verbose --testPathPattern='(integration|e2e|unit|performance)'",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "test:performance": "jest --testPathPattern=performance",
    "build": "npm install && npm run test",
    "docs": "node scripts/generateDocs.js",
    "health-check": "node scripts/healthCheck.js",
    "migrate": "node migrations/runMigrations.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate-env": "node scripts/validateEnvironment.js",
    "validate-security": "node validate-security.js",
    "setup": "cp ../.env.example ../.env && echo 'Environment template created! Please edit .env with your values.'",
    "encrypt-test": "node test-encryption.js"
  },
  "keywords": [
    "cms",
    "rice-harvester",
    "agriculture",
    "thailand",
    "ai-integration",
    "production-ready"
  ],
  "author": "Rabeab Kanchang",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.49.9",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-slow-down": "^2.0.1",
    "express-status-monitor": "^1.2.3",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "pg": "^8.11.3",
    "pm2": "^6.0.8",
    "prom-client": "^15.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}