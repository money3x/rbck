{
  "name": "rabeab-kanchang-cms",
  "version": "1.0.0",
  "description": "Rice Harvester CMS and Website - Production Ready",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "build": "npm install && npm run test",
    "docs": "node scripts/generateDocs.js",
    "health-check": "node scripts/healthCheck.js",
    "migrate": "node migrations/runMigrations.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "cms",
    "rice-harvester",
    "agriculture",
    "thailand",
    "ai-integration",
    "production-ready"
  ],
  "author": "Rabeab Kanchang",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.49.9",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "node-cache": "^5.1.2",
    "express-slow-down": "^2.0.1",
    "express-status-monitor": "^1.3.4",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "@eslint/js": "^9.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000,
    "forceExit": true,
    "detectOpenHandles": true
  }
}
