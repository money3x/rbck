# RBCK CMS Environment Configuration Template
# Copy this file to .env for local development
# For production (Render), set these as environment variables in the dashboard

# =================================================================
# SERVER CONFIGURATION
# =================================================================
NODE_ENV=production
PORT=10000
HOST=0.0.0.0

# =================================================================
# FRONTEND CONFIGURATION
# =================================================================
# Your Netlify frontend URL
FRONTEND_URL=https://flourishing-gumdrop-dffe7a.netlify.app

# Your Render backend API URL (auto-generated by Render)
API_URL=https://your-render-service.onrender.com

# =================================================================
# DATABASE CONFIGURATION (SUPABASE)
# =================================================================
# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Use Service Key for backend operations (more permissions)
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Public anon key (for client-side if needed)
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
# Strong JWT secret for token signing (generate a strong random string)
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters

# JWT token expiration time
JWT_EXPIRATION=24h

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here
ADMIN_EMAIL=admin@rbck.com

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# =================================================================
# AI PROVIDERS CONFIGURATION
# =================================================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Anthropic Claude
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# ChindaX
CHINDA_API_KEY=your_chinda_api_key_here
CHINDA_JWT_TOKEN=your_chinda_jwt_token_here
CHINDA_BASE_URL=https://chindax.iapp.co.th
CHINDA_MODEL=chinda-qwen3-32b

# =================================================================
# CACHING CONFIGURATION
# =================================================================
# Cache TTL in seconds
CACHE_API_TTL=300        # 5 minutes
CACHE_POSTS_TTL=900      # 15 minutes
CACHE_STATIC_TTL=3600    # 1 hour
CACHE_AI_TTL=1800        # 30 minutes
CACHE_CHECK_PERIOD=600   # 10 minutes

# =================================================================
# RATE LIMITING CONFIGURATION
# =================================================================
# Rate limit window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX=100

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info
# Log format: json, simple
LOG_FORMAT=json
# Log file retention
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# =================================================================
# NOTES FOR RENDER DEPLOYMENT:
# =================================================================
# 1. Go to your Render service dashboard
# 2. Navigate to "Environment" tab
# 3. Add each of these variables with your actual values
# 4. RENDER_EXTERNAL_URL is automatically provided by Render
# 5. Make sure to use strong passwords and secrets for production
# 6. Keep your API keys secure and never commit them to version control
# =================================================================
