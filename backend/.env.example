# ==================================================================
# RBCK Production Environment Variables Configuration
# ==================================================================
# ‚ö†Ô∏è  IMPORTANT: Set these values in your production environment
# üìù  For Render deployment, add these in Environment Variables section

# ==================================================================
# SERVER CONFIGURATION
# ==================================================================
PORT=10000
NODE_ENV=production

# ==================================================================
# JWT AUTHENTICATION SECURITY
# ==================================================================
# Generate a strong JWT secret: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters-long

# ==================================================================
# SUPABASE DATABASE CONFIGURATION
# ==================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ==================================================================
# AI PROVIDERS API KEYS
# ==================================================================

# Google Gemini AI
GEMINI_API_KEY=your-google-gemini-api-key-here
GEMINI_API_ENDPOINT=https://generativelanguage.googleapis.com/v1beta

# OpenAI GPT
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_ENDPOINT=https://api.openai.com/v1

# Anthropic Claude
CLAUDE_API_KEY=your-anthropic-claude-api-key-here
CLAUDE_API_ENDPOINT=https://api.anthropic.com/v1

# DeepSeek AI
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_API_ENDPOINT=https://api.deepseek.com/v1

# Qwen AI (Alibaba)
QWEN_API_KEY=your-qwen-api-key-here
QWEN_API_ENDPOINT=https://dashscope.aliyuncs.com/api/v1

# ==================================================================
# AI CONFIGURATION
# ==================================================================
AI_REQUEST_TIMEOUT=30000
AI_MAX_RETRIES=3
AI_RATE_LIMIT_PER_MINUTE=60

# ==================================================================
# SECURITY CONFIGURATION
# ==================================================================
# Enable CORS for production domains
CORS_ORIGINS=https://your-frontend-domain.netlify.app,https://your-custom-domain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================================================================
# COST TRACKING
# ==================================================================
# Enable cost tracking for AI usage
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=100.00
CURRENCY=THB

# ==================================================================
# LOGGING AND MONITORING
# ==================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# ==================================================================
# DEVELOPMENT ONLY (Remove in production)
# ==================================================================
# DEVELOPMENT_MODE=true
# DEBUG_AI_RESPONSES=true
