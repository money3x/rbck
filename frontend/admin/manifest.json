  "screenshots": [
    {
      "src": "screenshots/desktop-1.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard Overview"
    },
    {
      "src": "screenshots/mobile-1.png", 
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Dashboard"
    }
  ],

  "shortcuts": [
    {
      "name": "AI Chat",
      "short_name": "Chat",
      "description": "Open AI Chat Interface",
      "url": "/?section=ai-chatbot",
      "icons": [
        {
          "src": "icons/chat-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "AI Settings",
      "short_name": "Settings",
      "description": "Configure AI Providers",
      "url": "/?section=ai-settings",
      "icons": [
        {
          "src": "icons/settings-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Blog Manager",
      "short_name": "Blog",
      "description": "Manage Blog Posts",
      "url": "/?section=blog-manager",
      "icons": [
        {
          "src": "icons/blog-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "SEO Tools",
      "short_name": "SEO",
      "description": "SEO Analysis Tools",
      "url": "/?section=seo-tools",
      "icons": [
        {
          "src": "icons/seo-icon.png",
          "sizes": "96x96"
        }
      ]
    }
  ],

  "related_applications": [],
  "prefer_related_applications": false,

  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  
  "edge_side_panel": {
    "preferred_width": 400
  },

  "file_handlers": [
    {
      "action": "/blog-manager",
      "accept": {
        "text/markdown": [".md"],
        "text/plain": [".txt"]
      }
    },
    {
      "action": "/seo-tools",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "rbck",
      "url": "/?protocol=%s"
    }
  ],

  "share_target": {
    "action": "/blog-manager",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/plain", "text/markdown", "image/*"]
        }
      ]
    }
  }
}