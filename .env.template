# RBCK CMS Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# ===============================================
# SERVER CONFIGURATION
# ===============================================
NODE_ENV=production
PORT=10000
HOST=0.0.0.0

# ===============================================
# SECURITY CONFIGURATION
# ===============================================
# Generate a strong JWT secret: openssl rand -base64 64
JWT_SECRET=your-very-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=12

# Admin credentials (change these immediately!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here

# API Key encryption key (generate with: openssl rand -base64 32)
API_KEY_ENCRYPTION_KEY=your-encryption-key-for-api-keys-32-bytes

# Security settings
ENFORCE_IP_CONSISTENCY=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ===============================================
# DATABASE CONFIGURATION (SUPABASE)
# ===============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
SUPABASE_ANON_KEY=your-supabase-anon-key

# ===============================================
# FRONTEND CONFIGURATION
# ===============================================
FRONTEND_URL=https://your-frontend-domain.netlify.app

# ===============================================
# AI PROVIDERS CONFIGURATION
# ===============================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4

# Anthropic Claude
CLAUDE_API_KEY=sk-ant-your-claude-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# DeepSeek
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
DEEPSEEK_MODEL=deepseek-chat

# ChindaX (Custom Provider)
CHINDA_API_KEY=your-chinda-api-key
CHINDA_JWT_TOKEN=your-chinda-jwt-token
CHINDA_BASE_URL=https://api.chinda.com
CHINDA_MODEL=chinda-qwen3-32b

# ===============================================
# LOGGING CONFIGURATION
# ===============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# ===============================================
# CACHE CONFIGURATION
# ===============================================
CACHE_API_TTL=300
CACHE_POSTS_TTL=600
CACHE_AI_TTL=1800

# ===============================================
# MONITORING & ANALYTICS
# ===============================================
# Google Analytics (optional)
GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn

# ===============================================
# EXTERNAL SERVICES
# ===============================================
# Render deployment
RENDER_EXTERNAL_URL=https://your-app.onrender.com

# Netlify frontend
NETLIFY_SITE_ID=your-netlify-site-id

# ===============================================
# DEVELOPMENT ONLY
# ===============================================
# These should be removed in production
DEBUG=false
VERBOSE_LOGGING=false
